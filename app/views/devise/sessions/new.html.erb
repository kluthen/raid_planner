<h2>Connection</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email, "Email" %><br />
  <%= f.email_field :email, autofocus: true, size: 35 %></div>

  <div><%= f.label :password, "Mot de passe" %><br />
    <%= f.password_field :password, autocomplete: "off", size: 35 %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Retenir le mot de passe" %></div>
  <% end -%>

  <div><%= f.submit "Connexion" %></div>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  	<%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %><br />
  <% end -%>
<% end %>
