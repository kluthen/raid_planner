  	<title><%= content_for?(:title) ? yield(:title) : "Les Ecumeurs" %></title>

  	<%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>

      <!-- Navigation -->

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="<%= root_path %>" class="navbar-brand"><i class="fa fa-beer"></i>&nbsp;Les Écumeurs</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Evènements", events_path %></li>
        <li><%= link_to "Annonces", announcements_path%></li>
        <% if user_signed_in?  %>
          <li><a href="<%= edit_user_registration_path %>">Mon Compte &nbsp;<%if current_user.characters.count == 0 %> <span style="background-color:darkred" title="Pas de personnages créé !" class="badge ">!</span><%end%></a> </li>
          <li><%= link_to "Guilde", about_path if user_signed_in? and  current_user.is_admin %></li>
          <li><%= link_to "Forum", "http://forum.ecumeurs.fr/" %></li>
          <li><%= link_to "Logout",  destroy_user_session_path , method: :delete%></li>
        <% else %>
          <li><%= link_to "Login", new_user_session_path %></li>
          <li><%= link_to "Inscription", new_user_registration_path %></li>
        <% end %>
      </ul>
      
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

 
  <div class="container">
    <div class="row">
      <div class="col-md-12 columns">
        <%= yield %>    
      </div>
    </div>
  </div>
 
  <footer class="container-fluid row">
    <div class="col-md-12 columns"><hr>
              <p>© Copyright to Elhys & Emaneth for <%=image_tag "rift.jpg" %> guildmates.</p>
        </div>
    </div>
  </footer>

<!-- End Footer -->
  
 
<!-- End Footer -->
    

    

    
    <%= javascript_include_tag "application" %>
