<h1>Listing character_specialisations</h1>

<table>
  <thead>
    <tr>
      <th>Character</th>
      <th>Role type</th>
      <th>Ordered</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_specialisations.each do |character_specialisation| %>
      <tr>
        <td><%= character_specialisation.character_id %></td>
        <td><%= character_specialisation.role_type_id %></td>
        <td><%= character_specialisation.ordered %></td>
        <td><%= character_specialisation.comment %></td>
        <td><%= link_to 'Show', character_specialisation %></td>
        <td><%= link_to 'Edit', edit_character_specialisation_path(character_specialisation) %></td>
        <td><%= link_to 'Destroy', character_specialisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

