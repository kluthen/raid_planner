<h1>Listing roles</h1>

<table>
  <thead>
    <tr>
      <th>Event template</th>
      <th>Event</th>
      <th>Required players</th>
      <th>Comment</th>
      <th>Role type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.event_template_id %></td>
        <td><%= role.event_id %></td>
        <td><%= role.required_players %></td>
        <td><%= role.comment %></td>
        <td><%= role.role_type_id %></td>
        <td><%= link_to 'Show', role %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path %>
