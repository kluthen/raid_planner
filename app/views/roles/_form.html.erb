<%= simple_form_for(@role) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :event_template_id %>
    <%= f.input :event_id %>
    <%= f.input :required_players %>
    <%= f.input :comment %>
    <%= f.input :role_type_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
